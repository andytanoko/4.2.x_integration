<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/j2ee" version="2.1"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
                             http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
    <enterprise-beans>
        <session>
            <display-name>GWFActivityManager</display-name>
            <ejb-name>GWFActivityManager</ejb-name>
            <home>com.gridnode.pdip.app.workflow.engine.ejb.IGWFActivityManagerHome</home>
            <remote>com.gridnode.pdip.app.workflow.engine.ejb.IGWFActivityManagerObj</remote>
            <ejb-class>com.gridnode.pdip.app.workflow.engine.ejb.GWFActivityManagerBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        <session>
            <display-name>GWFProcessManager</display-name>
            <ejb-name>GWFProcessManager</ejb-name>
            <home>com.gridnode.pdip.app.workflow.engine.ejb.IGWFProcessManagerHome</home>
            <remote>com.gridnode.pdip.app.workflow.engine.ejb.IGWFProcessManagerObj</remote>
            <ejb-class>com.gridnode.pdip.app.workflow.engine.ejb.GWFProcessManagerBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        <session>
            <display-name>GWFRestrictionManager</display-name>
            <ejb-name>GWFRestrictionManager</ejb-name>
            <home>com.gridnode.pdip.app.workflow.engine.ejb.IGWFRestrictionManagerHome</home>
            <remote>com.gridnode.pdip.app.workflow.engine.ejb.IGWFRestrictionManagerObj</remote>
            <ejb-class>com.gridnode.pdip.app.workflow.engine.ejb.GWFRestrictionManagerBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>

    </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>GWFActivityManager</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>GWFProcessManager</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>GWFRestrictionManager</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
    </assembly-descriptor>
</ejb-jar>