<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/j2ee" version="2.1"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
                             http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <enterprise-beans>
    <entity>
      <display-name>BusinessEntity</display-name>
      <ejb-name>BusinessEntity</ejb-name>
      <local-home>com.gridnode.pdip.app.bizreg.entities.ejb.IBizEntityLocalHome</local-home>
      <local>com.gridnode.pdip.app.bizreg.entities.ejb.IBizEntityLocalObj</local>
      <ejb-class>com.gridnode.pdip.app.bizreg.entities.ejb.BizEntityBean</ejb-class>
      <persistence-type>Bean</persistence-type>
      <prim-key-class>java.lang.Long</prim-key-class>
      <reentrant>False</reentrant>
    </entity>
    <entity>
      <display-name>RegistryObjectMapping</display-name>
      <ejb-name>RegistryObjectMapping</ejb-name>
      <local-home>com.gridnode.pdip.app.bizreg.entities.ejb.IRegistryObjectMappingLocalHome</local-home>
      <local>com.gridnode.pdip.app.bizreg.entities.ejb.IRegistryObjectMappingLocalObj</local>
      <ejb-class>com.gridnode.pdip.app.bizreg.entities.ejb.RegistryObjectMappingBean</ejb-class>
      <persistence-type>Bean</persistence-type>
      <prim-key-class>java.lang.Long</prim-key-class>
      <reentrant>False</reentrant>
    </entity>
    <entity>
      <display-name>RegistryConnectInfo</display-name>
      <ejb-name>RegistryConnectInfo</ejb-name>
      <local-home>com.gridnode.pdip.app.bizreg.entities.ejb.IRegistryConnectInfoLocalHome</local-home>
      <local>com.gridnode.pdip.app.bizreg.entities.ejb.IRegistryConnectInfoLocalObj</local>
      <ejb-class>com.gridnode.pdip.app.bizreg.entities.ejb.RegistryConnectInfoBean</ejb-class>
      <persistence-type>Bean</persistence-type>
      <prim-key-class>java.lang.Long</prim-key-class>
      <reentrant>False</reentrant>
    </entity>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>BusinessEntity</ejb-name>
        <method-name>*</method-name>
      </method>
      <method>
        <ejb-name>RegistryObjectMapping</ejb-name>
        <method-name>*</method-name>
      </method>
      <method>
        <ejb-name>RegistryConnectInfo</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>
