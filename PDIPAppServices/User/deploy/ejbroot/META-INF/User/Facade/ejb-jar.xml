<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/j2ee" version="2.1"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
                             http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <enterprise-beans>
    <session>
      <display-name>UserManager</display-name>
      <ejb-name>UserManager</ejb-name>
      <home>com.gridnode.pdip.app.user.facade.ejb.IUserManagerHome</home>
      <remote>com.gridnode.pdip.app.user.facade.ejb.IUserManagerObj</remote>
      <ejb-class>com.gridnode.pdip.app.user.facade.ejb.UserManagerBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
      <!--env-entry>
        <env-entry-name>param/url/SignOnUrl</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>http://localhost:8080/signon/servlet/SignOnServlet</env-entry-value>
      </env-entry>
      <env-entry>
        <env-entry-name>param/url/SignOffUrl</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>http://localhost:8080/signon/servlet/SignOffServlet</env-entry-value>
      </env-entry-->
    </session>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>UserManager</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>
