<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/j2ee" version="2.1"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
                             http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <enterprise-beans>
    <entity>
      <display-name>ChannelInfo</display-name>
      <ejb-name>ChannelInfo</ejb-name>
      <local-home>com.gridnode.pdip.app.channel.entities.ejb.IChannelInfoLocalHome</local-home>
      <local>com.gridnode.pdip.app.channel.entities.ejb.IChannelInfoLocalObj</local>
      <ejb-class>com.gridnode.pdip.app.channel.entities.ejb.ChannelInfoBean</ejb-class>
      <persistence-type>Bean</persistence-type>
      <prim-key-class>java.lang.Long</prim-key-class>
      <reentrant>False</reentrant>
    </entity>
    <entity>
      <display-name>CommInfo</display-name>
      <ejb-name>CommInfo</ejb-name>
      <local-home>com.gridnode.pdip.app.channel.entities.ejb.ICommInfoLocalHome</local-home>
      <local>com.gridnode.pdip.app.channel.entities.ejb.ICommInfoLocalObj</local>
      <ejb-class>com.gridnode.pdip.app.channel.entities.ejb.CommInfoBean</ejb-class>
      <persistence-type>Bean</persistence-type>
      <prim-key-class>java.lang.Long</prim-key-class>
      <reentrant>False</reentrant>
    </entity>

    <entity>
      <display-name>PackagingInfo</display-name>
      <ejb-name>PackagingInfo</ejb-name>
      <local-home>com.gridnode.pdip.app.channel.entities.ejb.IPackagingInfoLocalHome</local-home>
      <local>com.gridnode.pdip.app.channel.entities.ejb.IPackagingInfoLocalObj</local>
      <ejb-class>com.gridnode.pdip.app.channel.entities.ejb.PackagingInfoBean</ejb-class>
      <persistence-type>Bean</persistence-type>
      <prim-key-class>java.lang.Long</prim-key-class>
      <reentrant>False</reentrant>
    </entity>

    <entity>
      <display-name>SecurityInfo</display-name>
      <ejb-name>SecurityInfo</ejb-name>
      <local-home>com.gridnode.pdip.app.channel.entities.ejb.ISecurityInfoLocalHome</local-home>
      <local>com.gridnode.pdip.app.channel.entities.ejb.ISecurityInfoLocalObj</local>
      <ejb-class>com.gridnode.pdip.app.channel.entities.ejb.SecurityInfoBean</ejb-class>
      <persistence-type>Bean</persistence-type>
      <prim-key-class>java.lang.Long</prim-key-class>
      <reentrant>False</reentrant>
    </entity>

  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>ChannelInfo</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>CommInfo</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>PackagingInfo</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>SecurityInfo</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>
