<?xml version="1.0"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/j2ee" version="2.1"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
                             http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <enterprise-beans>
    <message-driven>
      <ejb-name>ChannelReceiveListenerMessageMDB</ejb-name>
      <ejb-class>com.gridnode.pdip.app.channel.listener.ejb.ReceiveMessageListenerMDBean</ejb-class>
      <transaction-type>Container</transaction-type>
      <message-destination-type>javax.jms.Queue</message-destination-type>
    </message-driven>
    <message-driven>
      <ejb-name>ChannelSendListenerMessageMDB</ejb-name>
      <ejb-class>com.gridnode.pdip.app.channel.listener.ejb.SendMessageListenerMDBean</ejb-class>
      <transaction-type>Container</transaction-type>
      <message-destination-type>javax.jms.Queue</message-destination-type>
    </message-driven>
    <message-driven>
      <ejb-name>ChannelFeedBackListenerMessageMDB</ejb-name>
      <ejb-class>com.gridnode.pdip.app.channel.listener.ejb.FeedbackMessageListenerMDBean</ejb-class>
      <transaction-type>Container</transaction-type>
      <message-destination-type>javax.jms.Queue</message-destination-type>
    </message-driven>
    <message-driven>
      <ejb-name>EntityChangeListenerMDB_Channel</ejb-name>
      <ejb-class>com.gridnode.pdip.app.channel.listener.ejb.EntityChangeListenerMDBean</ejb-class>
      <transaction-type>Container</transaction-type>
      <message-destination-type>javax.jms.Topic</message-destination-type>
      <activation-config>
      	<activation-config-property>
      		<activation-config-property-name>messageSelector</activation-config-property-name>
      		<activation-config-property-value>EntityType = 'Certificate' AND hostid='${hostid:gnode1}'</activation-config-property-value>
      	</activation-config-property>
      </activation-config>
    </message-driven>
  </enterprise-beans>
  <assembly-descriptor>
    <!--container-transaction>
      <method>
        <ejb-name>ChannelFeedBackListenerMessageMDB</ejb-name>
        <method-name>*</method-name>
      </method>
	  <method>
	    <The entity eg GDOC, RNProfile will not get rollback if JMS ack failed to deliver to JMS server>
        <ejb-name>ChannelReceiveListenerMessageMDB</ejb-name>
        <method-name>onMessage</method-name>
      </method>
      <trans-attribute>NotSupported</trans-attribute>
    </container-transaction-->
    <container-transaction>
	  <method>
        <ejb-name>ChannelFeedBackListenerMessageMDB</ejb-name>
        <method-name>*</method-name>
      </method>
      <method>
        <ejb-name>ChannelReceiveListenerMessageMDB</ejb-name>
        <method-name>onMessage</method-name>
      </method>
      <method>
        <ejb-name>ChannelSendListenerMessageMDB</ejb-name>
        <method-name>onMessage</method-name>
      </method>
      <method>
        <ejb-name>EntityChangeListenerMDB_Channel</ejb-name>
        <method-name>onMessage</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>
