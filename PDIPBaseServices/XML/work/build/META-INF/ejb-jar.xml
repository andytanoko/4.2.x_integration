<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/j2ee" version="2.1"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
                             http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <enterprise-beans>
    <session>
      <display-name>XMLService</display-name>
      <ejb-name>XMLService</ejb-name>
      <local-home>com.gridnode.pdip.base.xml.facade.ejb.IXMLServiceLocalHome</local-home>
      <local>com.gridnode.pdip.base.xml.facade.ejb.IXMLServiceLocalObj</local>
      <ejb-class>com.gridnode.pdip.base.xml.facade.ejb.XMLServiceBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
    </session>
    <session>
      <display-name>XMLServiceRemote</display-name>
      <ejb-name>XMLServiceRemote</ejb-name>
      <home>com.gridnode.pdip.base.xml.facade.ejb.IXMLServiceHome</home>
      <remote>com.gridnode.pdip.base.xml.facade.ejb.IXMLServiceObj</remote>
      <ejb-class>com.gridnode.pdip.base.xml.facade.ejb.XMLServiceBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
    </session>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>XMLService</ejb-name>
        <method-name>*</method-name>
      </method>
      <method>
        <ejb-name>XMLServiceRemote</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>
