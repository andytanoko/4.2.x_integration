<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/j2ee" version="2.1"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
                             http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <enterprise-beans>
    <entity>
      <display-name>Feature</display-name>
      <ejb-name>Feature</ejb-name>
      <local-home>com.gridnode.pdip.base.acl.entities.ejb.IFeatureLocalHome</local-home>
      <local>com.gridnode.pdip.base.acl.entities.ejb.IFeatureLocalObj</local>
      <ejb-class>com.gridnode.pdip.base.acl.entities.ejb.FeatureBean</ejb-class>
      <persistence-type>Bean</persistence-type>
      <prim-key-class>java.lang.Long</prim-key-class>
      <reentrant>False</reentrant>
    </entity>
    <entity>
      <display-name>SubjectRole</display-name>
      <ejb-name>SubjectRole</ejb-name>
      <local-home>com.gridnode.pdip.base.acl.entities.ejb.ISubjectRoleLocalHome</local-home>
      <local>com.gridnode.pdip.base.acl.entities.ejb.ISubjectRoleLocalObj</local>
      <ejb-class>com.gridnode.pdip.base.acl.entities.ejb.SubjectRoleBean</ejb-class>
      <persistence-type>Bean</persistence-type>
      <prim-key-class>java.lang.Long</prim-key-class>
      <reentrant>False</reentrant>
    </entity>
    <entity>
      <display-name>Role</display-name>
      <ejb-name>Role</ejb-name>
      <local-home>com.gridnode.pdip.base.acl.entities.ejb.IRoleLocalHome</local-home>
      <local>com.gridnode.pdip.base.acl.entities.ejb.IRoleLocalObj</local>
      <ejb-class>com.gridnode.pdip.base.acl.entities.ejb.RoleBean</ejb-class>
      <persistence-type>Bean</persistence-type>
      <prim-key-class>java.lang.Long</prim-key-class>
      <reentrant>False</reentrant>
    </entity>
    <entity>
      <display-name>AccessRight</display-name>
      <ejb-name>AccessRight</ejb-name>
      <local-home>com.gridnode.pdip.base.acl.entities.ejb.IAccessRightLocalHome</local-home>
      <local>com.gridnode.pdip.base.acl.entities.ejb.IAccessRightLocalObj</local>
      <ejb-class>com.gridnode.pdip.base.acl.entities.ejb.AccessRightBean</ejb-class>
      <persistence-type>Bean</persistence-type>
      <prim-key-class>java.lang.Long</prim-key-class>
      <reentrant>False</reentrant>
    </entity>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>Feature</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>SubjectRole</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>Role</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>AccessRight</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>
