<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/j2ee" version="2.1"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
                             http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
	<enterprise-beans>
		<session>
			<display-name>iCalTimeMgr</display-name>
			<ejb-name>iCalTimeMgr</ejb-name>
			<home>com.gridnode.pdip.base.time.facade.ejb.IiCalTimeMgrHome</home>
			<remote>com.gridnode.pdip.base.time.facade.ejb.IiCalTimeMgrObj</remote>
			<ejb-class>com.gridnode.pdip.base.time.facade.ejb.iCalTimeMgrBean</ejb-class>
			<session-type>Stateless</session-type>
			<transaction-type>Container</transaction-type>
		</session>
		<message-driven>
			<ejb-name>TimeScheduleMDB</ejb-name>
			<ejb-class>com.gridnode.pdip.base.time.facade.ejb.TimeScheduleMDBean</ejb-class>
			<transaction-type>Container</transaction-type>
      <message-destination-type>javax.jms.Queue</message-destination-type>
		</message-driven>
		<message-driven>
			<ejb-name>TimeInvokeMDB</ejb-name>
			<ejb-class>com.gridnode.pdip.base.time.facade.ejb.TimeInvokeMDBean</ejb-class>
			<transaction-type>Container</transaction-type>
      <message-destination-type>javax.jms.Queue</message-destination-type>
      <activation-config>
      	<activation-config-property>
      		<activation-config-property-name>messageSelector</activation-config-property-name>
      		<activation-config-property-value>Category='Test'</activation-config-property-value>
      	</activation-config-property>
      </activation-config>
		</message-driven>
		<message-driven>
			<ejb-name>TimeMissedMDB</ejb-name>
			<ejb-class>com.gridnode.pdip.base.time.facade.ejb.TimeMissedMDBean</ejb-class>
			<transaction-type>Container</transaction-type>
      <message-destination-type>javax.jms.Topic</message-destination-type>
      <activation-config>
      	<activation-config-property>
      		<activation-config-property-name>messageSelector</activation-config-property-name>
      		<activation-config-property-value>Category='Test' AND hostid='${hostid:gnode1}'</activation-config-property-value>
      	</activation-config-property>
      </activation-config>
		</message-driven>		
	</enterprise-beans>
	<assembly-descriptor>
		<container-transaction>
			<method>
				<ejb-name>iCalTimeMgr</ejb-name>
				<method-name>*</method-name>
			</method>
			<trans-attribute>Required</trans-attribute>
		</container-transaction>
		<container-transaction>
			<method>
				<ejb-name>TimeScheduleMDB</ejb-name>
				<method-name>onMessage</method-name>
			</method>
			<trans-attribute>Required</trans-attribute>
		</container-transaction>
		<container-transaction>
			<method>
				<ejb-name>TimeInvokeMDB</ejb-name>
				<method-name>onMessage</method-name>
			</method>
			<trans-attribute>Required</trans-attribute>
		</container-transaction>
		<container-transaction>
			<method>
				<ejb-name>TimeMissedMDB</ejb-name>
				<method-name>onMessage</method-name>
			</method>
			<trans-attribute>Required</trans-attribute>
		</container-transaction>		
	</assembly-descriptor>
</ejb-jar>
