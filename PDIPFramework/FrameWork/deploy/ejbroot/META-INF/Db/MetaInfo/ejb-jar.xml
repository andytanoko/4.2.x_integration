<?xml version="1.0"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/j2ee" version="2.1"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
                             http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <enterprise-beans>
    <entity>
      <description>Entity Bean ( Container-managed Persistence )</description>
      <display-name>FieldMetaInfo</display-name>
      <ejb-name>FieldMetaInfo</ejb-name>
      <local-home>com.gridnode.pdip.framework.db.meta.IFieldMetaInfoLocalHome</local-home>
      <local>com.gridnode.pdip.framework.db.meta.IFieldMetaInfoLocalObj</local>
      <ejb-class>com.gridnode.pdip.framework.db.meta.FieldMetaInfoBean</ejb-class>
      <persistence-type>Container</persistence-type>
      <prim-key-class>java.lang.Long</prim-key-class>
      <reentrant>False</reentrant>
      <cmp-version>2.x</cmp-version>
      <abstract-schema-name>FieldMetaInfoBean</abstract-schema-name>
      <cmp-field>
        <field-name>uId</field-name>
      </cmp-field>
      <cmp-field>
        <field-name>displayable</field-name>
      </cmp-field>
      <cmp-field>
        <field-name>editable</field-name>
      </cmp-field>
      <cmp-field>
        <field-name>mandatory</field-name>
      </cmp-field>
      <cmp-field>
        <field-name>proxy</field-name>
      </cmp-field>
      <cmp-field>
        <field-name>label</field-name>
      </cmp-field>
      <cmp-field>
        <field-name>length</field-name>
      </cmp-field>
      <cmp-field>
        <field-name>sequence</field-name>
      </cmp-field>
      <cmp-field>
        <field-name>fieldName</field-name>
      </cmp-field>
      <cmp-field>
        <field-name>valueClass</field-name>
      </cmp-field>
      <cmp-field>
        <field-name>sqlName</field-name>
      </cmp-field>
      <cmp-field>
        <field-name>oqlName</field-name>
      </cmp-field>
      <cmp-field>
        <field-name>objectName</field-name>
      </cmp-field>
      <cmp-field>
        <field-name>entityName</field-name>
      </cmp-field>
      <cmp-field>
        <field-name>presentation</field-name>
      </cmp-field>
      <cmp-field>
        <field-name>constraints</field-name>
      </cmp-field>
      <primkey-field>uId</primkey-field>
      <query>
        <query-method>
          <method-name>findByEntityName</method-name>
          <method-params>
            <method-param>java.lang.String</method-param>
          </method-params>
        </query-method>
        <ejb-ql>
          <![CDATA[SELECT OBJECT(a) FROM FieldMetaInfoBean a WHERE a.entityName = ?1]]>
        </ejb-ql>
      </query>
      <query>
        <query-method>
          <method-name>findByLabel</method-name>
          <method-params>
            <method-param>java.lang.String</method-param>
          </method-params>
        </query-method>
        <ejb-ql>
          <![CDATA[SELECT OBJECT(a) FROM FieldMetaInfoBean a WHERE a.label = ?1]]>
        </ejb-ql>
      </query>
    </entity>
    <entity>
      <description>Entity Bean ( Container-managed Persistence )</description>
      <display-name>EntityMetaInfo</display-name>
      <ejb-name>EntityMetaInfo</ejb-name>
      <home>com.gridnode.pdip.framework.db.meta.IEntityMetaInfoHome</home>
      <remote>com.gridnode.pdip.framework.db.meta.IEntityMetaInfoObj</remote>
      <ejb-class>com.gridnode.pdip.framework.db.meta.EntityMetaInfoBean</ejb-class>
      <persistence-type>Container</persistence-type>
      <prim-key-class>java.lang.String</prim-key-class>
      <reentrant>False</reentrant>
      <cmp-version>2.x</cmp-version>
      <abstract-schema-name>EntityMetaInfoBean</abstract-schema-name>
      <cmp-field>
        <field-name>entityName</field-name>
      </cmp-field>
      <cmp-field>
        <field-name>sqlName</field-name>
      </cmp-field>
      <cmp-field>
        <field-name>objectName</field-name>
      </cmp-field>
      <primkey-field>objectName</primkey-field>
      <query>
        <query-method>
          <method-name>findAllEntityMetaInfo</method-name>
          <method-params>
          </method-params>
        </query-method>
        <ejb-ql>
          <![CDATA[SELECT OBJECT(a) FROM EntityMetaInfoBean AS a]]>
        </ejb-ql>
      </query>
      <query>
        <query-method>
          <method-name>findByEntityName</method-name>
          <method-params>
            <method-param>java.lang.String</method-param>
          </method-params>
        </query-method>
        <ejb-ql>
          <![CDATA[SELECT OBJECT(a) FROM EntityMetaInfoBean a WHERE a.entityName = ?1]]>
        </ejb-ql>
      </query>
    </entity>
