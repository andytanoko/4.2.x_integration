<?xml version="1.0"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/j2ee" version="2.1"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
                             http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
	<enterprise-beans>
		<session>
			<ejb-name>NotifierMgrBean</ejb-name>
			<home>com.gridnode.pdip.framework.notification.ejb.INotifierMgrHome</home>
			<remote>com.gridnode.pdip.framework.notification.ejb.INotifierMgrObj</remote>
			<ejb-class>com.gridnode.pdip.framework.notification.ejb.NotifierMgrBean</ejb-class>
			<session-type>Stateless</session-type>
			<transaction-type>Container</transaction-type>
		</session>
		<session>
			<ejb-name>NotifierMgrBean_local</ejb-name>
			<local-home>com.gridnode.pdip.framework.notification.ejb.INotifierMgrLocalHome</local-home>
			<local>com.gridnode.pdip.framework.notification.ejb.INotifierMgrLocalObj</local>
			<ejb-class>com.gridnode.pdip.framework.notification.ejb.NotifierMgrBean</ejb-class>
			<session-type>Stateless</session-type>
			<transaction-type>Container</transaction-type>
		</session>
	</enterprise-beans>
	<assembly-descriptor>
		<container-transaction>
			<method>
				<ejb-name>NotifierMgrBean</ejb-name>
				<method-name>*</method-name>
			</method>
			<trans-attribute>RequiresNew</trans-attribute>
		</container-transaction>
		<container-transaction>
			<method>
				<ejb-name>NotifierMgrBean_local</ejb-name>
				<method-name>*</method-name>
			</method>
			<trans-attribute>RequiresNew</trans-attribute>
		</container-transaction>
	</assembly-descriptor>
</ejb-jar>
