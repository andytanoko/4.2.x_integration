<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/j2ee" version="2.1"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
                             http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <enterprise-beans>
    <session>
      <display-name>DocumentManager</display-name>
      <ejb-name>DocumentManager</ejb-name>
      <home>com.gridnode.gtas.server.document.facade.ejb.IDocumentManagerHome</home>
      <remote>com.gridnode.gtas.server.document.facade.ejb.IDocumentManagerObj</remote>
      <ejb-class>com.gridnode.gtas.server.document.facade.ejb.DocumentManagerBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
    </session>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
              <ejb-name>DocumentManager</ejb-name>
              <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
	<container-transaction>
      <method>
              <ejb-name>DocumentManager</ejb-name>
              <method-name>createGridDocumentWithNewTrans</method-name>
      </method>
      <trans-attribute>RequiresNew</trans-attribute>
    </container-transaction>
    <!--container-transaction>
      <method>
              <ejb-name>DocumentManager</ejb-name>
              <method-name>importDoc</method-name>
                <method-params>
                  <method-param>com.gridnode.gtas.server.document.model.GridDocument</method-param>
                </method-params>
      </method>
      <trans-attribute>RequiresNew</trans-attribute>
    </container-transaction-->
  </assembly-descriptor>
</ejb-jar>
