<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/j2ee" version="2.1"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
                             http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <enterprise-beans>
    <session>
      <display-name>GTAS Connection Service</display-name>
      <ejb-name>ConnectionService</ejb-name>
      <home>com.gridnode.gtas.server.connection.facade.ejb.IConnectionServiceHome</home>
      <remote>com.gridnode.gtas.server.connection.facade.ejb.IConnectionServiceObj</remote>
      <ejb-class>com.gridnode.gtas.server.connection.facade.ejb.ConnectionServiceBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
    </session>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>ConnectionService</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>ConnectionService</ejb-name>
        <method-name>onConnectionLost</method-name>
      </method>
      <trans-attribute>NotSupported</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>
