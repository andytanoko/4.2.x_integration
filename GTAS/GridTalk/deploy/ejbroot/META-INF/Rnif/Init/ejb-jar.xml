<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/j2ee" version="2.1"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
                             http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <enterprise-beans>
  <message-driven>
    <ejb-name>RnifInitializerMDBean</ejb-name>
    <ejb-class>com.gridnode.gtas.server.rnif.init.ejb.RnifInitializerMDBean</ejb-class>
    <transaction-type>Container</transaction-type>
    <message-destination-type>javax.jms.Topic</message-destination-type>
    <activation-config>
    	<activation-config-property>
    		<activation-config-property-name>messageSelector</activation-config-property-name>
    		<activation-config-property-value>hostid='${hostid:gnode1}'</activation-config-property-value>
    	</activation-config-property>
    </activation-config>
  </message-driven>
  <message-driven>
    <ejb-name>RnifInitializerMDBean_onchange</ejb-name>
    <ejb-class>com.gridnode.gtas.server.rnif.init.ejb.RnifInitializerMDBean</ejb-class>
    <transaction-type>Container</transaction-type>
    <message-destination-type>javax.jms.Topic</message-destination-type>
    <activation-config>
    	<activation-config-property>
    		<activation-config-property-name>messageSelector</activation-config-property-name>
    		<activation-config-property-value>EntityType = 'ProcessDef' AND hostid='${hostid:gnode1}'</activation-config-property-value>
    	</activation-config-property>
    </activation-config>
  </message-driven>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>RnifInitializerMDBean</ejb-name>
        <method-name>onMessage</method-name>
      </method>
      <method>
        <ejb-name>RnifInitializerMDBean_onchange</ejb-name>
        <method-name>onMessage</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>
