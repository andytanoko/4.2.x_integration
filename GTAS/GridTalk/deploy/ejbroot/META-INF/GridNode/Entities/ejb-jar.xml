<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/j2ee" version="2.1"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
                             http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <enterprise-beans>
    <entity>
      <display-name>GridNode</display-name>
      <ejb-name>GridNode</ejb-name>
      <local-home>com.gridnode.gtas.server.gridnode.entities.ejb.IGridNodeLocalHome</local-home>
      <local>com.gridnode.gtas.server.gridnode.entities.ejb.IGridNodeLocalObj</local>
      <ejb-class>com.gridnode.gtas.server.gridnode.entities.ejb.GridNodeBean</ejb-class>
      <persistence-type>Bean</persistence-type>
      <prim-key-class>java.lang.Long</prim-key-class>
      <reentrant>False</reentrant>
    </entity>
    <entity>
      <display-name>ConnectionStatus</display-name>
      <ejb-name>ConnectionStatus</ejb-name>
      <local-home>com.gridnode.gtas.server.gridnode.entities.ejb.IConnectionStatusLocalHome</local-home>
      <local>com.gridnode.gtas.server.gridnode.entities.ejb.IConnectionStatusLocalObj</local>
      <ejb-class>com.gridnode.gtas.server.gridnode.entities.ejb.ConnectionStatusBean</ejb-class>
      <persistence-type>Bean</persistence-type>
      <prim-key-class>java.lang.Long</prim-key-class>
      <reentrant>False</reentrant>
    </entity>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>GridNode</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>ConnectionStatus</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>
