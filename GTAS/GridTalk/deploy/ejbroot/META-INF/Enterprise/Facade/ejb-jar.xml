<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/j2ee" version="2.1"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
                             http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <enterprise-beans>
    <session>
      <display-name>ResourceLinkManager</display-name>
      <ejb-name>ResourceLinkManager</ejb-name>
      <home>com.gridnode.gtas.server.enterprise.facade.ejb.IResourceLinkManagerHome</home>
      <remote>com.gridnode.gtas.server.enterprise.facade.ejb.IResourceLinkManagerObj</remote>
      <ejb-class>com.gridnode.gtas.server.enterprise.facade.ejb.ResourceLinkManagerBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
    </session>
    <session>
      <display-name>SharedResourceManager</display-name>
      <ejb-name>SharedResourceManager</ejb-name>
      <home>com.gridnode.gtas.server.enterprise.facade.ejb.ISharedResourceManagerHome</home>
      <remote>com.gridnode.gtas.server.enterprise.facade.ejb.ISharedResourceManagerObj</remote>
      <ejb-class>com.gridnode.gtas.server.enterprise.facade.ejb.SharedResourceManagerBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
    </session>
    <session>
      <display-name>EnterpriseHierarchyManager</display-name>
      <ejb-name>EnterpriseHierarchyManager</ejb-name>
      <home>com.gridnode.gtas.server.enterprise.facade.ejb.IEnterpriseHierarchyManagerHome</home>
      <remote>com.gridnode.gtas.server.enterprise.facade.ejb.IEnterpriseHierarchyManagerObj</remote>
      <ejb-class>com.gridnode.gtas.server.enterprise.facade.ejb.EnterpriseHierarchyManagerBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
    </session>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>ResourceLinkManager</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>EnterpriseHierarchyManager</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>
