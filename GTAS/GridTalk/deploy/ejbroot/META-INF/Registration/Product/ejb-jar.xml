<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/j2ee" version="2.1"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
                             http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <enterprise-beans>
    <session>
      <display-name>GTAS Product Registration</display-name>
      <ejb-name>RegistrationService</ejb-name>
      <home>com.gridnode.gtas.server.registration.product.ejb.IRegistrationServiceHome</home>
      <remote>com.gridnode.gtas.server.registration.product.ejb.IRegistrationServiceObj</remote>
      <ejb-class>com.gridnode.gtas.server.registration.product.ejb.RegistrationServiceBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
    </session>
    <message-driven>
      <ejb-name>CheckLicenseMDBean</ejb-name>
      <ejb-class>com.gridnode.gtas.server.registration.product.ejb.CheckLicenseMDBean</ejb-class>
      <transaction-type>Container</transaction-type>
      <message-destination-type>javax.jms.Queue</message-destination-type>
      <activation-config>
      	<activation-config-property>
      		<activation-config-property-name>messageSelector</activation-config-property-name>
      		<activation-config-property-value>Category='CheckLicense'</activation-config-property-value>
      	</activation-config-property>
      </activation-config>
    </message-driven>
    <message-driven>
      <ejb-name>StartupListenerMDBean_Reg</ejb-name>
      <ejb-class>com.gridnode.gtas.server.registration.product.ejb.StartupListenerMDBean</ejb-class>
      <transaction-type>Container</transaction-type>
      <message-destination-type>javax.jms.Topic</message-destination-type>
      <activation-config>
      	<activation-config-property>
      		<activation-config-property-name>messageSelector</activation-config-property-name>
      		<activation-config-property-value>hostid='${hostid:gnode1}'</activation-config-property-value>
      	</activation-config-property>
      </activation-config>
    </message-driven>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>RegistrationService</ejb-name>
        <method-name>*</method-name>
      </method>
      <method>
        <ejb-name>CheckLicenseMDBean</ejb-name>
        <method-name>onMessage</method-name>
      </method>
      <method>
        <ejb-name>StartupListenerMDBean_Reg</ejb-name>
        <method-name>onMessage</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
	<container-transaction>
      <method>
        <ejb-name>CheckLicenseMDBean</ejb-name>
        <method-name>onMessage</method-name>
      </method>
      <trans-attribute>NotSupported</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>
