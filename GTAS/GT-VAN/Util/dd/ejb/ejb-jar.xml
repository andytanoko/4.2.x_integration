<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/j2ee" version="2.1"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
                             http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <enterprise-beans>
   <session>
      <display-name>JmsHandlerManagerBean</display-name>
      <ejb-name>JmsHandlerManagerBean</ejb-name>
	  <home>com.gridnode.util.jms.ejb.IJmsHandlerManagerHome</home>
      <remote>com.gridnode.util.jms.ejb.IJmsHandlerManagerObj</remote>
      <ejb-class>com.gridnode.util.jms.ejb.JmsHandlerManagerBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
    </session>
	<session>
      <display-name>JmsHandlerManagerBean_local</display-name>
      <ejb-name>JmsHandlerManagerBean_local</ejb-name>
      <local-home>com.gridnode.util.jms.ejb.IJmsHandlerManagerLocalHome</local-home>
      <local>com.gridnode.util.jms.ejb.IJmsHandlerManagerLocalObj</local>
      <ejb-class>com.gridnode.util.jms.ejb.JmsHandlerManagerBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
    </session>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
              <ejb-name>JmsHandlerManagerBean</ejb-name>
              <method-name>*</method-name>
      </method>
	  <trans-attribute>RequiresNew</trans-attribute>
    </container-transaction>
	<container-transaction>
      <method>
              <ejb-name>JmsHandlerManagerBean_local</ejb-name>
              <method-name>*</method-name>
      </method>
	  <trans-attribute>RequiresNew</trans-attribute>
    </container-transaction>
	<!--container-transaction> 17 DEC The sending of jms should use a new transaction, so taht we will know the send status straighaway
      <method>
              <ejb-name>JmsHandlerManagerBean</ejb-name>
              <method-name>send</method-name>
			  <method-params>
			      <method-param>java.io.Serializable</method-param>
				  <method-param>java.util.Hashtable</method-param>
				  <method-param>java.util.Properties</method-param>
			  </method-params>
      </method>
	  <trans-attribute>Required</trans-attribute>
    </container-transaction-->
  </assembly-descriptor>
</ejb-jar>
