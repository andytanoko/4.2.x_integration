<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/j2ee" version="2.1"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
                             http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <enterprise-beans>
	  <message-driven>
	    <ejb-name>TransactionFlowMDBean</ejb-name>
	    <ejb-class>com.gridnode.gtas.audit.extraction.listeners.ejb.TransactionFlowMDBean</ejb-class>
	    <transaction-type>Container</transaction-type>
	    <message-driven-destination>
            <destination-type>javax.jms.Topic</destination-type>
            <subscription-durability>Durable</subscription-durability>
         </message-driven-destination>
	    <activation-config>
	    	<activation-config-property>
	    		<activation-config-property-name>messageSelector</activation-config-property-name>
	    		<activation-config-property-value>id IN('DocumentFlow', 'DocumentTransaction', 'ProcessTransNotification') AND hostid='${hostid:gnode1}'</activation-config-property-value>
	    	</activation-config-property>
	    </activation-config>
	  </message-driven>
	  <message-driven>
	      <ejb-name>ReprocessPIActivityMDBean</ejb-name>
	      <ejb-class>com.gridnode.gtas.audit.reprocess.listeners.ejb.ReprocessPIActivityMDBean</ejb-class>
	      <!--message-selector>Category='DocumentResend'</message-selector-->
	      <transaction-type>Container</transaction-type>
	      <message-destination-type>javax.jms.Queue</message-destination-type>
	   </message-driven>
  <message-driven>
      <ejb-name>GTArchiveDelegateMDBean</ejb-name>
      <ejb-class>com.gridnode.gtas.audit.archive.listeners.ejb.GTArchiveDelegateMDBean</ejb-class>
      <transaction-type>Container</transaction-type>
	  <message-driven-destination>
        <destination-type>javax.jms.Queue</destination-type>
      </message-driven-destination>
      <!--activation-config>
	    	<activation-config-property>
	    		<activation-config-property-name>messageSelector</activation-config-property-name>
	    		<activation-config-property-value>hostid='${hostid:gnode1}'</activation-config-property-value>
	    	</activation-config-property>
	    </activation-config-->
   </message-driven>
   <session>
      <display-name>ArchiveProxyManagerBean</display-name>
      <ejb-name>ArchiveProxyManagerBean</ejb-name>
      <home>com.gridnode.gtas.audit.archive.facade.ejb.IArchiveProxyManagerHome</home>
      <remote>com.gridnode.gtas.audit.archive.facade.ejb.IArchiveProxyManagerObj</remote>
      <ejb-class>com.gridnode.gtas.audit.archive.facade.ejb.ArchiveProxyManagerBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
    </session>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>TransactionFlowMDBean</ejb-name>
        <method-name>onMessage</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
	<container-transaction>
      <method>
        <ejb-name>ReprocessPIActivityMDBean</ejb-name>
        <method-name>onMessage</method-name>
      </method>
      <trans-attribute>NotSupported</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
              <ejb-name>ArchiveProxyManagerBean</ejb-name>
              <method-name>*</method-name>
      </method>
	    <trans-attribute>RequiresNew</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>
