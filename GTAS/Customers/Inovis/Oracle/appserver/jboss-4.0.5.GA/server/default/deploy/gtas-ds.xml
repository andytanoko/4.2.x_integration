      </metadata>
      <application-managed-security/>
  </local-tx-datasource>

  <local-tx-datasource>
    <!-- This connection pool will be bound into JNDI with the name "java:/archivedbdatasource" -->
    <jndi-name>archivedbdatasource</jndi-name>
    <connection-url>jdbc:oracle:thin:@rcarevdbs01.qrs.com:1522/pilotd1.qrs.com</connection-url>
