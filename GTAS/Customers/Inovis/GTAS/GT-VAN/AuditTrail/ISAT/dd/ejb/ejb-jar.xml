<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar version="2.1"
	xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
	http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
	<enterprise-beans>
		<message-driven>
			<display-name>ISAT Transaction Listener</display-name>
			<ejb-name>AuditTrailMDBean</ejb-name>
			<ejb-class>com.gridnode.gtas.audit.tracking.listener.ejb.AuditTrailMDBean</ejb-class>
			<transaction-type>Container</transaction-type>
			<message-destination-type>javax.jms.Queue</message-destination-type>
		</message-driven>
	<message-driven>
			<display-name>ISAT Transaction Listener</display-name>
			<ejb-name>AuditTrailMDBeanForLocal</ejb-name>
			<ejb-class>com.gridnode.gtas.audit.tracking.listener.ejb.AuditTrailMDBean</ejb-class>
			<transaction-type>Container</transaction-type>
			<message-destination-type>javax.jms.Queue</message-destination-type>
	</message-driven>
	<message-driven>
			<display-name>ISAT Archive Listener</display-name>
			<ejb-name>AuditTrailArchiveMDBean</ejb-name>
			<ejb-class>com.gridnode.gtas.audit.archive.listener.ejb.AuditTrailArchiveMDBean</ejb-class>
			<transaction-type>Container</transaction-type>
			<message-destination-type>javax.jms.Queue</message-destination-type>
	</message-driven>
	<message-driven>
			<display-name>ISAT Archive Notify Listener</display-name>
			<ejb-name>AuditTrailNotifyArchiveMDBean</ejb-name>
			<ejb-class>com.gridnode.gtas.audit.archive.listener.ejb.AuditTrailNotifyArchiveMDBean</ejb-class>
			<transaction-type>Container</transaction-type>
			<message-destination-type>javax.jms.Queue</message-destination-type>
      <!--activation-config>
	    	<activation-config-property>
	    		<activation-config-property-name>messageSelector</activation-config-property-name>
	    		<activation-config-property-value>hostid='${hostid:gnode1}'</activation-config-property-value>
	    	</activation-config-property>
	    </activation-config-->
	</message-driven>
    <session>
      <display-name>AuditTrailManagerBean</display-name>
      <ejb-name>AuditTrailManagerBean</ejb-name>
      <home>com.gridnode.gtas.audit.tracking.facade.ejb.IAuditTrailManagerHome</home>
      <remote>com.gridnode.gtas.audit.tracking.facade.ejb.IAuditTrailManagerObj</remote>
      <ejb-class>com.gridnode.gtas.audit.tracking.facade.ejb.AuditTrailManagerBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
    </session>
	<session>
      <display-name>ReprocessManagerBean</display-name>
      <ejb-name>ReprocessManagerBean</ejb-name>
      <home>com.gridnode.gtas.audit.reprocess.facade.ejb.IReprocessManagerHome</home>
      <remote>com.gridnode.gtas.audit.reprocess.facade.ejb.IReprocessManagerObj</remote>
      <ejb-class>com.gridnode.gtas.audit.reprocess.facade.ejb.ReprocessManagerBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
    </session>
	<session>
      <display-name>AuditTrailArchiveManagerBean</display-name>
      <ejb-name>AuditTrailArchiveManagerBean</ejb-name>
      <home>com.gridnode.gtas.audit.archive.facade.ejb.IAuditTrailArchiveManagerHome</home>
      <remote>com.gridnode.gtas.audit.archive.facade.ejb.IAuditTrailArchiveManagerObj</remote>
      <ejb-class>com.gridnode.gtas.audit.archive.facade.ejb.AuditTrailArchiveManagerBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
    </session>
	<session>
      <display-name>AuditTrailArchiveManagerBean_local</display-name>
      <ejb-name>AuditTrailArchiveManagerBean_local</ejb-name>
	  <local-home>com.gridnode.gtas.audit.archive.facade.ejb.IAuditTrailArchiveManagerLocalHome</local-home>
	  <local>com.gridnode.gtas.audit.archive.facade.ejb.IAuditTrailArchiveManagerLocalObj</local>
      <ejb-class>com.gridnode.gtas.audit.archive.facade.ejb.AuditTrailArchiveManagerBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
    </session>
	<session>
      <display-name>AuditPropertiesManagerBean</display-name>
      <ejb-name>AuditPropertiesManagerBean</ejb-name>
      <home>com.gridnode.gtas.audit.properties.facade.ejb.IAuditPropertiesManagerHome</home>
      <remote>com.gridnode.gtas.audit.properties.facade.ejb.IAuditPropertiesManagerObj</remote>
      <ejb-class>com.gridnode.gtas.audit.properties.facade.ejb.AuditPropertiesManagerBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
    </session>
	<session>
      <display-name>ArchiveSchedulerManagerBean</display-name>
      <ejb-name>ArchiveSchedulerManagerBean</ejb-name>
      <home>com.gridnode.gtas.audit.archive.scheduler.facade.ejb.IArchiveSchedulerHome</home>
      <remote>com.gridnode.gtas.audit.archive.scheduler.facade.ejb.IArchiveSchedulerObj</remote>
      <ejb-class>com.gridnode.gtas.audit.archive.scheduler.facade.ejb.ArchiveSchedulerManagerBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
    </session>

	<session>
      <display-name>ProcessTransManagerBean</display-name>
      <ejb-name>ProcessTransManagerBean</ejb-name>
      <local-home>com.gridnode.gtas.audit.tracking.facade.ejb.IProcessTransManagerLocalHome</local-home>
      <local>com.gridnode.gtas.audit.tracking.facade.ejb.IProcessTransManagerLocalObj</local>
      <ejb-class>com.gridnode.gtas.audit.tracking.facade.ejb.ProcessTransManagerBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
    </session>

	<session>
      <display-name>ArchiveServiceManagerBean</display-name>
      <ejb-name>ArchiveServiceManagerBean</ejb-name>
	  <home>com.gridnode.gtas.audit.archive.facade.ejb.IArchiveServiceManagerHome</home>
      <remote>com.gridnode.gtas.audit.archive.facade.ejb.IArchiveServiceManagerObj</remote>
      <local-home>com.gridnode.gtas.audit.archive.facade.ejb.IArchiveServiceManagerLocalHome</local-home>
      <local>com.gridnode.gtas.audit.archive.facade.ejb.IArchiveServiceManagerLocalObj</local>
      <ejb-class>com.gridnode.gtas.audit.archive.facade.ejb.ArchiveServiceManagerBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
    </session>

 	</enterprise-beans>

  <assembly-descriptor>
  	<container-transaction>
      <method>
        <ejb-name>AuditTrailMDBean</ejb-name>
        <method-name>onMessage</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
	<container-transaction>
      <method>
        <ejb-name>AuditTrailMDBeanForLocal</ejb-name>
        <method-name>onMessage</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
        <ejb-name>AuditTrailArchiveMDBean</ejb-name>
        <method-name>onMessage</method-name>
      </method>
      <trans-attribute>NotSupported</trans-attribute>
    </container-transaction>
    <container-transaction>
      <method>
              <ejb-name>AuditTrailManagerBean</ejb-name>
              <method-name>*</method-name>
      </method>
	  <trans-attribute>RequiresNew</trans-attribute>
    </container-transaction>
	<container-transaction>
      <method>
              <ejb-name>AuditTrailArchiveManagerBean</ejb-name>
              <method-name>*</method-name>
      </method>
	  <trans-attribute>RequiresNew</trans-attribute>
    </container-transaction>
	<container-transaction>
      <method>
              <ejb-name>AuditPropertiesManagerBean</ejb-name>
              <method-name>*</method-name>
      </method>
	  <trans-attribute>RequiresNew</trans-attribute>
    </container-transaction>
	<container-transaction>
      <method>
              <ejb-name>ArchiveSchedulerManagerBean</ejb-name>
              <method-name>*</method-name>
      </method>
	  <trans-attribute>RequiresNew</trans-attribute>
    </container-transaction>

	<container-transaction>
      <method>
              <ejb-name>ProcessTransManagerBean</ejb-name>
              <method-name>*</method-name>
      </method>
	  <trans-attribute>RequiresNew</trans-attribute>
    </container-transaction>
	<container-transaction>
      <method>
              <ejb-name>ArchiveServiceManagerBean</ejb-name>
              <method-name>*</method-name>
      </method>
	  <trans-attribute>RequiresNew</trans-attribute>
    </container-transaction>
  </assembly-descriptor>

</ejb-jar>